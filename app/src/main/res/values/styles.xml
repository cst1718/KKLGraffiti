<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景灰度 -->
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:windowFullscreen">true</item>
    </style>


    <!--================================================== 文字样式 ===========================================-->
    <!-- 大标题文字样式 -->
    <style name="public_style_text_title">
        <item name="android:textColor">@color/public_color_text_primary</item>
        <item name="android:textSize">@dimen/public_text_size_title</item>
    </style>

    <!-- 主要文字样式 -->
    <style name="public_style_text_primary">
        <item name="android:textColor">@color/public_color_text_primary</item>
        <item name="android:textSize">@dimen/public_text_size_primary</item>
    </style>

    <!-- 注释文字样式 -->
    <style name="public_style_text_explain">
        <item name="android:textColor">@color/public_color_text_explain</item>
        <item name="android:textSize">@dimen/public_text_size_secondary</item>
    </style>

    <!-- 补充文字样式 -->
    <style name="public_style_text_support">
        <item name="android:textColor">@color/public_color_text_explain</item>
        <item name="android:textSize">@dimen/public_text_size_support</item>
    </style>

    <!-- ================================================ 分割线样式 ==========================================-->
    <style name="Line">
        <item name="android:background">@color/public_color_line</item>
    </style>

    <style name="Line.Vertical">
        <item name="android:layout_width">@dimen/public_common_line</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/public_common_line</item>
    </style>

    <!--=============================================列表样式==========================================================-->
    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/public_list_margin</item>
        <item name="android:paddingRight">@dimen/public_list_margin</item>
    </style>

    <!-- 144px列表 -->
    <style name="List.Primary">
        <item name="android:layout_height">@dimen/public_list_primary_height</item>
    </style>

    <!-- 274px列表 -->
    <style name="List.Secondary">
        <item name="android:layout_height">@dimen/public_list_secondary_height</item>
    </style>

    <!-- 202px列表 -->
    <style name="List.Third">
        <item name="android:layout_height">@dimen/public_list_third_height</item>
    </style>


    <!-- 关于我们条目样式 -->
    <style name="about_item_left_style">
        <item name="android:textColor">@color/public_color_text_primary</item>
        <item name="android:textSize">@dimen/public_text_size_primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="about_item_right_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/public_color_text_explain</item>
        <item name="android:textSize">@dimen/public_text_size_support</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
